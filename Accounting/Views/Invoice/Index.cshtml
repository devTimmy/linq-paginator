@using Common
@using System.Text
@using Accounting.Models
@model Invoice
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Invoice -</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet">
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/invoice.css" rel="stylesheet" />
</head>
<body>
    <div id="invoice-wrapper">
        <header>
            <h3 class="txt-head">@Model.CompanyName</h3>
            @if (Model.CompanyLocation != null)
            {
                @if (Model.CompanyLocation.Street.IsValid())
                {
                    <p>@Model.CompanyLocation.Street</p>
                }
                {
                    StringBuilder area = new StringBuilder();
                    if (Model.CompanyLocation.Town.IsValid())
                    {
                        area.Append(Model.CompanyLocation.Town + ", ");
                    }
                    if (Model.CompanyLocation.Area.IsValid())
                    {
                        area.Append(Model.CompanyLocation.Area + ", ");
                    }
                    if (Model.CompanyLocation.Country.IsValid())
                    {
                        area.Append(Model.CompanyLocation.Country);
                    }
                    <p>@area.ToString()</p>
                }
                @if (Model.CompanyLocation.Tel.IsValid())
                {
                    <p>@Model.CompanyLocation.Tel</p>
                }
            }
        </header>
        <main>
            <h1 class="txt-primary title">Invoice</h1>
            <h5 class="txt-accent">Submitted on @(Model.SubmissionDate.HasValue ? Model.SubmissionDate.Value.ToShortDateString() : DateTime.Now.ToShortDateString())</h5>

            <br />

            <div class="row">
                <div class="col-4">
                    <h5 class="txt-black font-weight-bold">Invoice For</h5>
                    <p>Name</p>
                    <p>Company Name</p>
                    <p>Street Address</p>
                    <p>City, State, Zip</p>
                </div>
                <div class="col-4">
                    <h5 class="txt-black font-weight-bold">Payable To</h5>
                    <p>Name</p>

                    <br />
                    <br />

                    <h5 class="txt-black font-weight-bold">Project</h5>
                    <p>Project Name</p>
                </div>
                <div class="col-4">
                    <h5 class="txt-black font-weight-bold">Invoice #</h5>
                    <p>123456</p>

                    <br />
                    <br />

                    <h5 class="txt-black font-weight-bold">Due Date</h5>
                    <p>1/3/2000</p>
                </div>
            </div>

            <hr />

            <table class="">
                <thead>
                    <tr>
                        <th style="width:50%;">Description</th>
                        <th style="width:10%;">Qty</th>
                        <th style="width:20%;">Unit Price</th>
                        <th style="width:20%;">Total Price</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Item #1</td>
                        <td>1</td>
                        <td>$200.00</td>
                        <td>$200.00</td>
                    </tr>
                    <tr>
                        <td>Item #2</td>
                        <td>2</td>
                        <td>$200.00</td>
                        <td>$400.00</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>$0.00</td>
                    </tr>
                </tbody>
            </table>

            <hr />

            <div class="row">
                <div class="col-6">
                    <p>Notes:</p>
                </div>
                <div class="col-6">
                    <div class="row">
                        <div class="col-6">
                            <span class="txt-primary-light">Subtotal</span>
                        </div>
                        <div class="col-6">
                            <span class="txt-black">$600.00</span>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-6">
                            <span class="txt-primary-light">Additions</span>
                        </div>
                        <div class="col-6">
                            <span class="txt-black">+$0.00</span>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-6">
                            <span class="txt-primary-light">Adjustments</span>
                        </div>
                        <div class="col-6">
                            <span class="txt-black">-$100.00</span>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-2">
                            <h6>Total</h6>
                        </div>
                        <div class="col-6">
                            <h2 class="txt-accent">$500.00</h2>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
