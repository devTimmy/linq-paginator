@page
@model Github.Pages.Accounts.Phone_VerificationModel
@{
    ViewBag.Title = "Code Verification";
    Layout = "~/Pages/Shared/_IdentityLayout.cshtml";
}

<h1>@ViewBag.Title</h1>
<partial name="_BusyIndicator" />

@if (Globals.RandomBool())
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <span>Failed verifying code!</span>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<form action="phone_verification" method="POST">
    <div class="form-group">
        <center>
            <img src="~/img/phone_email.svg" height="50" alt="Phone Email Icon" />
        </center>
    </div>
    <div class="form-group">
        <label for="#" class="text-center">
            Enter the verification code sent via SMS to the number +254 712 345 678
        </label>
        <input type="number" name="smsCode" id="smsCode" required
               autocomplete="off" autocorrect="off"
               autocapitalize="off" placeholder="Enter SMS code" />
    </div>
    <input type="submit" value="Continue..">
</form>
<section id="new-user-box">
    <p>
        <span>
            <a href="phone_confirmation">Resend confirmation code.</a>
        </span>
    </p>
</section>

